<br>
<div>
<h1 class="text-center" style="color: white;"><%= @competition.name %></h1>
</div>
<br>

<div>
<h2 class="text-center" style="color: white;"><%= @game.name %></h2>
</div>
<br>

<div>
<h3 class="text-center" style="color: white;"> Live standings for your sweepstake:</h3>
</div>
<br>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @players.each do |player| %>
    <div class="col">
      <div class="card h-100 text-center">
        <div class="card-body">
          <h5 class="card-title"><%= player.name %></h5>
          <p class="card-text">
            Was drawn: <br><b><%= team = Team.find(player.team_id).name %></b>
            <br>
             Current form: <br><b><%= form = Team.find(player.team_id).form %></b>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>


