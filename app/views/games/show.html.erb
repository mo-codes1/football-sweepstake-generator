<h1><%= @competition.name %></h1>

<h1><%= @game.name %></h1>

<h2>New player name:</h2>
  <%= form_with model: [ @competition, @game, @game.players.build ] do |form, i| %>
    <% i = 1 %>
    <% 24.times do %>
    <p>
      <%= form.text_field "player#{i}" %>
    </p>
    <% i += 1 %>
    <% end %>
    <p>
      <%= form.submit "Generate sweepstake" %>
    </p>
  <% end %>