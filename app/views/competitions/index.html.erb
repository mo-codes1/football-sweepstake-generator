<br>
<div>
<h1 class="text-center" style="color: white;">Competitions</h1>
</div>
<br>




<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @competitions.each do |competition| %>
    <div class="col">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title"><%= competition.name %></h5>
          <p class="card-text">You can create a sweepstake for the <%= competition.name %> here.</p>
          <a href="/competitions/<%= competition.id %>" class="btn btn-primary">Create Sweepstake</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
