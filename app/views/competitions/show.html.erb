<h1><%= @competition.name %></h1>
<br>
<ul>
  <% @teams.each do |team| %>
   <li>
     <%= team.name %>
   </li>
  <% end %>
 </ul>
<br>

<h2>Sweepstakes</h2>

<ul>
  <% @games.each do |game| %>
   <li>
     <a href="<%= @competition.id %>/games/<%= game.id %>/players/id">
       <%= game.name %>
     </a>
     <%= link_to "Delete", competition_game_url(game.id), data: { turbo_method: :delete } %>
   </li>
  <% end %>
 </ul>

<h2>New sweepstake name:</h2>
<%= form_with model: [ @competition, @competition.games.build ] do |form| %>
  
  <p>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.submit "Create Sweepstake" %>
  </p>
<% end %>
